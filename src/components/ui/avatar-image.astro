---
import { cn } from "@/lib/utils";
import { Image } from "astro:assets";

interface Props {
  className?: string;
  src: ImageMetadata;
  alt?: string;
}

const { className, src, alt, ...props } = Astro.props;
---

<Image
  class={cn("aspect-square h-full w-full object-cover", className)}
  src={src}
  width={224}
  height={224}
  alt={alt ?? "Profile picture"}
  {...props}
/>
